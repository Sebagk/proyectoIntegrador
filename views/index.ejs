<% if (locals.user != undefined) { %>
	<%- include('./partials/headerLogueado') %>
<% } else { %>
	<%- include('./partials/header')  %>
<% } %>

<div class="banner">
</div>

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < 5; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= lista[i].id %>">
							<figure class="product-box_image">
								<img src="<%= lista[i].imagen %>" alt="<%= lista[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= lista[i].nombre %></h2>
								<p><%= lista[i].descripcion %></p>
								<p><a href="/users/profile/id/<%= lista[i].usuario.id %>"><%= lista[i].usuario.usuario %></a></p>
							</article>
						</a>
					</section>
				</div>
				<% } %>
			</div>
		</div>
	</div>

	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más Comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 5; i < lista.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= lista[i].id %>">
							<figure class="product-box_image">
								<img src="<%= lista[i].imagen %>" alt="<%= lista[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= lista[i].nombre %></h2>
								<p><%= lista[i].descripcion %></p>
								<p><a href="/users/profile/id/<%= lista[i].usuario.id %>"><%= lista[i].usuario.usuario %></a></p>
							</article>
						</a>
					</section>
				</div>
				<% } %>
			</div>
		</div>
	</div>

<%- include('./partials/footer') %>
