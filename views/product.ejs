<%- include('./partials/header')%>

<div class="container products-wrapper">
    <div class="d-flex align-items-center">
        <h2 class="products-title"><%= lista.nombre %></h2> 
        <p class="product-detail-description">
            <a id="editar" href="/product/productadd">Editar</a>
        </p>
    </div>
    <div class="product-detail">
        <div class="row">
            <article class="col-12 col-lg-8 product-detail-info">
                <img src="<%= lista.imagen %>" alt="" class="product-detail-img">
                <p class="product-detail-description">
                <%= lista.descripcion %></p>
            </article>

            <div class="col-12 col-lg-4">
                <% for (let i = 0; i < lista.comentarios.length; i++) { %>    
                <section class="comments">
                    <article>
                        <img src="<%= lista.comentarios[i].usuario.imagen_de_perfil %>" alt="">
                        <div class="data">
                            <p class="user">
                            <strong><a href="http://localhost:3000/users/profile/<%= lista.comentarios[i].dni %>"><%= lista.comentarios[i].usuario.email%>: </a></strong>
                             <%= lista.comentarios[i].comentario %></p>
                        </div>
                    </article>
                </section>
                <% } %>
                <hr>
                <form class="form" action="#" method="post">
                    <input class="form-input" type="text" value="" placeholder="Agregar comentario">
                    <button type="submit" class="btn">AGREGAR COMENTARIO</button>
                </form>
                <hr>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
