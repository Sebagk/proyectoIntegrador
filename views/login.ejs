<% if (locals.user != undefined) { %>
	<%- include('./partials/headerLogueado') %>
<% } else { %>
	<%- include('./partials/header')  %>
<% } %>
<div class="container products-wrapper">
    <div class="row" style="display: flex; flex-direction: column;">
        <div class="col-12">
            <h2 class="products-title">Ingresar</h2>
        </div>
        <h2>			  
            <div id="contenedor">
                <div id="central">
                    <div id="login">
                        <div class="titulo">
                            Bienvenido
                        </div>
                        <hr>
                        <% if (locals.errors) { %>
							<% errors.forEach(error => { %>
							<p class="errores"><%= error.msg %></p>
						<% }) %>
                        <% } %>
                            
                        <form method="post" action="/users/login" id="loginform" class="profile-form">
                            <input type="text" for="nombre" name="usuario" placeholder="Nombre de usuario" class="profile-form-input" 
                            value="<%= locals.old && old.usuario ? old.usuario : "" %>">
                            
                            <input type="password" for="contrasenia" placeholder="Contraseña" name="password" class="profile-form-input">
                            
                            <button type="submit" title="Ingresar" class="btn">Ingresar</button>

                            <div style="display: flex; flex-direction: row;">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1" name="recordarUsuario" style="width: 20px; height: 20px; margin-left: 0%; margin-right: 1%; ">
                                <label class="form-check-label" style="margin-top: 0.8%;">Recordarme</label>
                            </div>
                        </form>
                        <div class="pie-form">
                            <a href="/users/register">¿No tienes Cuenta? Registrate</a>
                        </div>
                    </div>
                    <div class="inferior"><hr>
                        <a href="/">Volver</a>
                    </div>
                </div>
            </div>
        </h2>
    </div>
</div>


<%- include('./partials/footer') %>
