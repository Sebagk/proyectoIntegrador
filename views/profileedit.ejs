<%- include('./partials/headerLogueado')%>

<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Editar mi perfil</h2>
        </div>
        <!-- Show the "ultimos" products -->
        <h2> 
            <div id="contenedor" style="width: 950px;">
                <div id="central">
                    <div id="login" style="padding: 30px 45px; margin-top: 0%;">
                        <div class="titulo">
                            Editar mi perfil
                        </div>
                        <form method="get" action="#" id="loginform" enctype="multipart/form-data">
                            <input  type="email" name="email" value="<%= lista.email %>">

                            <input type="text" name="nombre" value="<%= lista.nombre %>">
                            
                            <input type="password"  name="contraseña" placeholder="Nueva contraseña">

                            <input type="date" name="nacimiento" value="<%= lista.fecha_nacimiento %>">
                            
                            <input type="number" name="documento" value="<%= perfil.dni %>">
                            
                            <a>Foto de perfil</a>
                            <input type="file" name="fotoDePerfi" style="background-color: rgb(205 205 205);
                            padding: 7.2px;">

                            <button type="submit" title="GuardarCambios" name="GuardarCambios">Guardar cambios</button>

                        </form>
                    </div>
                    <div class="inferior">
                        <a style="width: 25%;" href="/">Volver al inicio</a>
                    </div>
                </div>
            </div>
        </h2>
    </div>
</div>

<%- include('./partials/footer') %>
