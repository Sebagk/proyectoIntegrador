<% if (locals.user != undefined) { %>
	<%- include('./partials/headerLogueado') %>
<% } else { %>
	<%- include('./partials/header')  %>
<% } %>
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <% if(lista.length > 0){ %>
                <h2 class="products-title">Resultados de búsqueda: "<%= search %>"</h2>
            <% }  else{ %>
                <h2 class="products-title">Resultados de búsqueda: No hay resultados para "<%= search %>"</h2>
            <% } %>
        </div>
        <!-- Show the "ultimos" products -->
        <div class="container products-wrapper">
            <div class="row">
                <!-- Show the "ultimos" products -->
                <% for (let i = 0; i < lista.length; i++) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class="product-box">
                            <a href="/product/id/<%= lista[i].id %>">
                                <figure class="product-box_image">
                                    <img src="<%= lista[i].imagen %>" alt="<%= lista[i].nombre %>">
                                </figure>
                                <article class="product-box_data">
                                    <h2><%= lista[i].nombre %></h2>
                                    <p><%= lista[i].descripcion %></p>
                                    <p><a href="/users/id/<%= lista[i].usuario.id %>"><%= lista[i].usuario.usuario %></a></p>
                                </article>
                            </a>
                        </section>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    
    </div>
</div>

<%- include('./partials/footer') %>
